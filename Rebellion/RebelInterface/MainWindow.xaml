<Window x:Class="RebelInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*">
            </RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome To Our Rebel Database" TextAlignment="Center"  VerticalAlignment="Center" Margin="10,10,10,10" Grid.Row="0"/>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Find" Margin="10,10,10,10" Grid.Row="0" Grid.Column="0" />
            <Button Content="Add" Margin="10,10,10,10" Grid.Row="0" Grid.Column="1" />
            <Button Content="Edit" Margin="10,10,10,10" Grid.Row="1" Grid.Column="0" />
            <Button Content="Delete" Margin="10,10,10,10" Grid.Row="1" Grid.Column="1" />

        </Grid>
    </Grid>
</Window>
